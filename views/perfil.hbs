<div class="contacto">
        <h3 class="titulo">Enviar Correo</h3>
        <form class="formulario" method="POST" action="/miperfil">
          <p class="nombre">
            
            <label>Nombre</label>
            <h2>{{usuario}}</h2>
            <h3>{{email}}</h3>
          </p>
          <p class="fecha">
            <label>Agregar nueva dirección</label>
            <textarea type="text" name="direccion" placeholder="Dirección"> </textarea>
          </p>
          <p class="correo">
            <br>
            <br>
            <button class="btn" type="submit">Agregar</button>
          </p>
             
  <table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Dirección</th>
    </tr>
  </thead>
  <tbody>
    {{#each direcciones as |item i| }}
    <tr>
      <th scope="row">{{i}}</th>
      <th scope="row">{{this}}</th>
       {{else}}
     <th></th>  
     <th>Aún no se han agregado direcciones.</th>
    </tr>
    {{/each}}
  </tbody>
</table>
        </form>
      </div>
    </div>
  </div>