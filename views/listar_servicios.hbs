<div class="container">
    <br>
    <div class="errores " id="errores">
   
{{> showMessages messages}}
</div>
<div id="scroll">
 <div class="containerlist" style="overflow-x:auto;">

  <h3><a class="btn btn-secondary" href="/crear-servicio"><i class="fa fa-plus"></i> Crear Nuevo</a> Lista Servicios</h3>
<table class="table table-striped">
    

 
    <thead>
        <tr>
            <th>Servicio</th>
            <th>Precio</th>
           
            <th></th>
        </tr>
    </thead>
   
    <tbody>
        
        {{#each servicios}}
       
        <tr>
            <td>{{this.nombre}}</td>
            <td>L {{this.precio}}</td>
            <td>	<a> <img width="120" height="120"  src="{{imagen}}" alt=""></a></td>
            <td>
                <a href="/modificar-servicio/{{this.url}}"><i class="fa fa-pencil fa-lg" style="color: #F88600;" aria-hidden="true">

                </i></a>
                <a href="{{this._id}}" onclick="return confirm('Estas seguro de eliminar ?');">
                <i class="fa fa-trash fa-lg" style="color: gray;" aria-hidden="true"></i></a>
            </td>
        </tr>
        
        {{/each}}
       
    </tbody>
      
</table>
</div>
 </div>
